<!DOCTYPE html>
<html>
	<head>
	  <title>GFP - Gerente Financeiro Pessoal</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>

	<body>		
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<!-- <image src="/images/logo.png" /> -->
					<h1>GFP</h1>
					<h4>Gerente Financeiro Pessoal</h4>
				</div>
			</div>
		</div>

		<div class="container back">		
			<header>
				<% if session[:user] %>
					<br>Bem-vindo <%= session[:user].nome %>!
					<% if session[:last_login] %>
						<br>Seu último acesso foi em: <%= session[:last_login].strftime("%d/%m/%Y às %H:%M") %> 
					<% end %>	
					<%= link_to "Perfil", edit_usuario_path(session[:user]) %>
					<%= link_to "Sair", sessions_path, method: :delete %>
				<% end %>
			</header>

			<% if flash[:notice] %>
				<%= flash[:notice] %>
			<% end %>
		
			<%= yield %>

			</div>

			<div class="navbar navbar-fixed-bottom">
				<div class="navbar-inner">
				<footer>
					<div class="container">
						<sub>Gerente Financeiro Pessoal</sub>
					</div>
				</footer>
			</div>
		</div>
	</body>
</html>