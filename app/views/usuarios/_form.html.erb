<h1>Meu Perfil</h1>

<%= form_for(@usuario) do |f| %>
	<% if @usuario.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

			<ul>
			<% @usuario.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		Seu nome<br>
		<%= f.text_field :nome %>
	</div>
	<div class="field">
		Nome de usuário<br>
		<%= f.text_field :nome_login, :disabled => !@usuario.id.nil? %>
	</div>
	<div class="field">
		e-mail<br>
		<%= f.text_field :email, :disabled => !@usuario.id.nil? %>
	</div>
	<div class="field">
		Senha<br>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		Confirmação<br><%= f.password_field :password_confirmation %>
	</div><div class="actions">
		<%= f.submit 'Gravar' %>
	</div>
<% end %>
